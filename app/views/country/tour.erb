<div class="tour">
<% @tour.images.each do |image| %>
	<img src="<%= image.url %>" id="tourimage"><br>
  <div class="tourcontent">
<h3><%= @tour.tour_name %></h3><br>
<% end %>
<p>Description: <%= @tour.content %><br></p>
<p>Lasting Time: <%= @tour.time_needed %> hours.</p>
<p>Price: $<%= @tour.price %></p>
<a href="/users/<%= current_user.id %>/wishlist/<%= @tour.id %>" class="add_to_wishlist">Add to wish list</a>

<div class="row">
    <form class="col s6" action="/purchase/<%= @tour.id %>" id="purchaseform">
      <div class="row">
        <div class="input-field col s6">
          <input id="first_name" type="text" class="validate" name="quantity">
          <label for="first_name">Quantity</label>
        </div>
        <div class="input-field col s6">
          <input id="last_name" type="text" class="validate" name="date">
          <label for="last_name">Date</label>
        </div>
      </div>
      <div class="row">
    <!--     <div class="input-field col s12">
          <input disabled id="disabled" type="text" class="validate">
          <label for="disabled">Disabled</label>
        </div> -->
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" class="validate" name="remarks">
          <label for="email">Remarks(optional)</label>
        </div>
      </div>

  <button class="p btn btn-success dropdown-toggle btn-block" type="submit">Purchase now</button>
    </form>
<!--     <button id="map" class="p btn btn-success dropdown-toggle btn-block" type="submit">Extend map</button> -->
  </div>
</div>


