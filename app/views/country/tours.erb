<h2 style="text-align: center;"><%= @country.country_name %></h2>

<% @tours.each do |tour| %>
 	<div class="row">
	  <div class="col s12 m3">
			<div class="card small">
		    <div class="card-image waves-effect waves-block waves-light">
		      <img class="activator" src="<%= tour.images.first.url%>" id="cardimage">
		    </div>
		    <div class="card-content">
		      <span class="card-title activator grey-text text-darken-4"><%=tour.tour_name%><i class="material-icons right">more_vert</i></span>
		      <p><a href="/tour/<%= tour.id %>">More Details</a></p>
		    </div>
		    <div class="card-reveal">
		      <span class="card-title grey-text text-darken-4"><%=tour.tour_name%><i class="material-icons right">close</i></span>
		      <p><%=tour.content%></p>
		    </div>
		  </div>
		</div>
	<% end %>
</div>