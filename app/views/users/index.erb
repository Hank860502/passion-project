<div class="row">
  <div class="col s12 center">
    <h1 class="light-blue-text">Discover Bros Now</h1>
  </div>
  <% @users.each do |user| %>
    <% user.tweets.each do |tweet| %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-image">
                <div class="col s3 m3">
                  <img src="<%= user.image %>" class="responsive-img" alt="profile image">
                </div>
              </div>
            <div class="card-content white-text">
              <span class="card-title"><%= user.user_name %></span>
              <p><%= tweet.body %></p>
            </div>
            <div class="card-action">
              <a href="/tweets/<%= tweet.id %>/like" class="btn waves-effect waves-light orange"><%=tweet.likes.count %>   Likes </a>

              <% if tweet.user.followers.include?(@current_user) %>
                    <a href="/users/<%= @current_user.id %>/follow/<%= tweet.user.id %>/destroy" class="btn waves-effect waves-light light-blue">Unfollow</a>
                <% else %>
                    <a href="/users/<%= @current_user.id %>/follow/<%= tweet.user.id %>" class="btn waves-effect waves-light light-blue">Follow</a>
                <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
</div>
