<div class="row">
  <div class="col s12 center">
    <h3 class="light-blue-text">Sup Bro-brah, this is <%=@user.first_name %> <%=@user.last_name %>'s profile page. Bruh-name: <%=@user.user_name %></h3>
  </div>

    <%@user.tweets.each do |tweet| %>
    <div class="row">
        <div class="col s12 m12">
          <div class="card blue-grey darken-1">
              <div class="card-image">
                <div class="col s1 m1">
                  <img src="<%= @user.image %>" class="responsive-img" alt="profile image">
                </div>
              </div>
            <div class="card-content white-text">
              <span class="card-title"><%= @user.user_name %></span>
              <p> <%= tweet.body %> </p>
              <p> <%= tweet.created_at.localtime.strftime("%B %d, %Y %H:%M") %><p/>
              <p>No. of Bro-likes: <%= tweet.likes.count %></p>
            </div>
          </div>
        </div>
    </div>
    <% end %>
</div>


<div class="row">
  <div class="col s12 center">
    <h3 class="light-blue-text">Following bros</h3>
  </div>

    <% @user.followees.each do |followee| %>
    <% followee.tweets.each do |tweet| %>
    <div class="row">
        <div class="col s12 m12">
          <div class="card blue-grey darken-1">
              <div class="card-image">
                <div class="col s1 m1">
                  <img src="<%= followee.image %>" class="responsive-img" alt="profile image">
                </div>
              </div>
            <div class="card-content white-text">
                <span class="card-title"><a href="/users/<%= tweet.user.id %>/tweets"><%= tweet.user.user_name %></a></span>
                <p><%= tweet.body %> </p>
                <p> <%= tweet.created_at.localtime.strftime("%B %d, %Y %H:%M") %></p>
                <p>No. of Bro-likes: <%= tweet.likes.count %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
